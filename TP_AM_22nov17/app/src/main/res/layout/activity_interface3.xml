<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/i3_txtV_infos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:background="@color/fondPerso"
        android:textColor="@color/police2"
        android:textSize="14sp" />

    <Button
        android:id="@+id/i3_btn_sports"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15dp"
        android:background="@color/bouton"
        android:text="@string/i3_sports"
        android:textSize="22sp"
        android:textAlignment="center"
        android:textColor="@color/police"/>

    <Button
        android:id="@+id/i3_btn_accueil"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15dp"
        android:background="@color/bouton"
        android:text="@string/i3_accueil"
        android:textSize="22sp"
        android:textAlignment="center"
        android:textColor="@color/police"/>

</LinearLayout>